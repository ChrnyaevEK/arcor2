{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://example.com/root.json",
  "type": "object",
  "title": "ARCOR2 scene schema",
  "definitions": {
    "pose": {
      "type": "object",
      "properties":{
        "position": {
          "type": "object",
          "properties": {
            "x": "number",
            "y": "number",
            "z": "number"
          },
          "required": ["x", "y", "z"]
        },
        "orientation": {
          "type": "object",
          "properties": {
            "x": "number",
            "y": "number",
            "z": "number",
            "w": "number"
          },
          "required": ["x", "y", "z", "w"]
        }
      },
      "required": ["position", "orientation"]
    },
    "sceneObject": {
      "type": "object",
      "description": "Instances of given type in the scene.",
      "properties": {
        "id": {
          "type": "string",
          "description": "This will be used as variable name in script (transformed into lower case).",
          "examples": ["robot1", "bigBox"],
          "pattern": "^[^\\d\\W]\\w*\\Z"
        },
        "type": {
          "type": "string",
          "description": "Respective class.",
          "examples": ["Generic", "Robot"],
          "pattern": "[a-zA-Z_][a-zA-Z0-9_]*"
        },
        "pose": {
          "type": "object",
          "properties": {
            "$ref": "#/definitions/pose"
          }
        }
      },
      "required": ["id", "type", "pose"]
    }
  },
  "required": [
    "_id",
    "objects"
  ],
  "properties": {
    "_id": {
      "type": "string",
      "description": "Scene id. Used as primary key in MongoDB. Should not contain dot.",
      "minLength": 3,
      "examples": [
        "anything_without_dot"
      ],
      "pattern": "^[^.]*$"
    },
    "objects": {
      "type": "array",
      "items": { "$ref": "#/definitions/sceneObject" },
      "default": []
    }
  }
}