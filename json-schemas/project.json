{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ARCOR2 project schema",
  "definitions": {
    "action": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "examples": ["MoveToBoxIN"],
          "pattern": "[a-zA-Z_][a-zA-Z0-9_]*"
        },
        "type": {
          "type": "string",
          "examples": ["robot/move_to"]
        },
        "parameters": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string"
              },
              "type": {
                "type": "string",
                "examples": ["string", "ActionPoint", "float"]
              },
              "value": {
                "type": ["string", "number"]
              }
            },
            "required": ["id", "type", "value"]
          }
        },
        "inputs": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "default": {
                "type": "string"
              }
            }
          }
        },
        "outputs": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "default": {
                "type": "string"
              }
            }
          }
        }
      },
      "required": ["id", "type", "parameters", "inputs", "outputs"]
    },
    "action_point": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "examples": ["AP1"]
        },
        "pose": {
          "$ref": "common.json#/definitions/pose"
        },
        "actions":{
          "type": "array",
          "items": {
            "$ref": "#/definitions/action"
          }
        }
      },
      "required": ["id", "pose", "actions"]
    },
    "projectObject": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "description": "ID of the object instance (variable name in script).",
          "examples": ["robot1", "bigBox"],
          "pattern": "^[^\\d\\W]\\w*\\Z"
        },
        "action_points": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/action_point"
          }
        }
      }
    }
  },
  "type": "object",
  "required": [
    "_id",
    "objects"
  ],
  "properties": {
    "_id": {
      "type": "string",
      "description": "Project id. Used as primary key in MongoDB. Should not contain dot.",
      "minLength": 3,
      "examples": [
        "anything_without_dot"
      ],
      "pattern": "^[^.]*$"
    },
    "scene_id": {
      "type": "string",
      "description": "Project is always linked to some scene.",
      "minLength": 3,
      "examples": [
        "anything_without_dot"
      ],
      "pattern": "^[^.]*$"
    },
    "objects": {
      "type": "array",
      "items": { "$ref": "#/definitions/projectObject" },
      "default": []
    }
  }
}