{
   "paths": {
      "/project/{project_id}/publish": {
         "get": {
            "description": "Get zip file with execution package. To be used by the Execution service.",
            "parameters": [
               {
                  "in": "path",
                  "name": "project_id",
                  "schema": {
                     "type": "string"
                  },
                  "required": true,
                  "description": "unique ID"
               }
            ],
            "responses": {
               "200": {
                  "description": "Ok",
                  "content": {
                     "application/zip": {
                        "schema": {
                           "type": "string",
                           "format": "binary",
                           "example": "The archive of execution package (.zip)"
                        }
                     }
                  }
               },
               "404": {
                  "description": "Project ID or some of the required items was not found."
               },
               "501": {
                  "description": "Project invalid."
               }
            }
         }
      },
      "/project/{project_id}/script": {
         "put": {
            "description": "Add or update project main script (DOES NOT WORK YET).",
            "parameters": [
               {
                  "in": "path",
                  "name": "project_id",
                  "schema": {
                     "type": "string"
                  },
                  "required": true,
                  "description": "unique ID"
               }
            ],
            "requestBody": {
               "content": {
                  "text/x-python": {
                     "schema": {
                        "type": "string",
                        "format": "binary"
                     }
                  }
               }
            },
            "responses": {
               "200": {
                  "description": "Ok"
               }
            }
         }
      }
   },
   "info": {
      "title": "ARCOR2 Build Service",
      "version": "0.4.0"
   },
   "openapi": "3.0.2"
}